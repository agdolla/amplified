{
  "private": true,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "amplified": "yarn workspace amplified",
    "example": "node ./scripts/run-example"
  },
  "devDependencies": {
    "@auto-it/all-contributors": "^9.30.5",
    "@auto-it/first-time-contributor": "^9.30.5",
    "@kevinwolf/eslint-config": "^0.2.4",
    "all-contributors-cli": "^6.14.2",
    "auto": "^9.30.5",
    "doctoc": "^1.4.0",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "lint-staged": "^10.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && lerna exec lint-staged --since HEAD --stream"
    }
  },
  "lint-staged": {
    "README.md": [
      "doctoc",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "auto": {
    "name": "Kevin Wolf",
    "email": "hi@kevinwolf.dev",
    "plugins": [
      "all-contributors",
      "first-time-contributor",
      "npm",
      "released"
    ],
    "labels": [
      {
        "name": "minor-graduate",
        "changelogTitle": "ðŸš€ Enhancement",
        "description": "Increment the major version when merged",
        "releaseType": "major"
      }
    ]
  }
}
